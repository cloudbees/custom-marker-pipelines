pipeline {
  parameters {
    string(defaultValue: "@completed", description: 'Cucumber Tag', name: 'CUCUMBER_TAG')
  }
  agent {
    kubernetes {
      label 'mypod'
      yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    label: mypod
spec:
  containers:
  - name: maven
    image: maven:alpine
    command:
    - cat
    tty: true
  - name: busybox
    image: busybox
    command:
    - cat
    tty: true
"""
    }
  }
  stages {
    stage('Test') {

      steps {
     container('maven') {
       echo "Tag: ${params.CUCUMBER_TAG}"
        sh """
        mvn test -Dcucumber.options="--tags ${params.CUCUMBER_TAG}"
        """

        }
      }
    }
  }
}
