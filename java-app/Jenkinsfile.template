pipeline {
  parameters {
    string(defaultValue: "completed", description: 'Cucumber Tag', name: 'CUCUMBER_TAG')
  }
  agent { label 'java-app' }
  stages {
    stage('Test') {

      steps {
     container('maven') {
       echo "${params.CUCUMBER_TAG}"
        sh "mvn test -Dcucumber.options=--tags "@${params.CUCUMBER_TAG}""
        }
      }
    }
  }
}
