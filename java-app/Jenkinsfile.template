pipeline {
  parameters {
    string(defaultValue: "@completed", description: 'Cucumber Tag - Default is @completed', name: 'CUCUMBER_TAG')
  }
  agent { label 'java-app' }
  stages {
    stage('Test') {

     container('maven') {
       steps {
        sh "mvn test -Dcucumber.options=--tags "${params.CUCUMBER_TAG}""
        }
      }
    }
  }
}
